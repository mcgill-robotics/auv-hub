---
import TileGrid from "../components/TileGrid.astro";
import SubteamSection from "../components/SubteamSection.astro";

const slack = {
    link: "http://slack.com", 
    img: "images/slack.svg", 
    name: "Slack"
};
const discord = {
    link: "http://discord.com", 
    img: "images/discord.svg", 
    name: "Discord"
};
const googleDrive = {
    link: "http://drive.google.com", 
    img: "images/google-drive.svg", 
    name: "Google Drive"
};
const github = {
    link: "http://github.com", 
    img: "images/github.svg", 
    name: "Github"
};
const trello = {
    link: "http://trello.com", 
    img: "images/trello.svg", 
    name: "Trello"
};
const kiCAD = {
    link: "http://kicad.com", 
    img: "images/kicad.svg", 
    name: "KiCAD"
};
const freeCAD = {
    link: "http://freecad.com", 
    img: "images/freecad.svg", 
    name: "FreeCAD"
};

const roboticsResources = [slack, discord, googleDrive];
const electricalResources = [kiCAD];
const mechanicalResources = [freeCAD];
const softwareResources = [github, trello];
---

<html>
    <head>
        <title>McGill Robotics AUV Hub</title>
    </head>
    <body>
        <h1>McGill Robotics Team-Wide Links</h1>
        <TileGrid tiles={roboticsResources}/>

        <h1>AUV Links</h1>
        <SubteamSection 
            name={"Electrical"}
            resources={electricalResources}/>
        <SubteamSection 
            name={"Mechanical"}
            resources={mechanicalResources}/>
        <SubteamSection 
            name={"Software"}
            resources={softwareResources}/>
    </body>
</html>
