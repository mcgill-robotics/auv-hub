---
const {name, link, img} = Astro.props;
---
<div class="outer">
    <a  href={link}>
        <div class="inner"> 
            <div class="tile-icon">
                <img src={img}/>
            </div>
            <p> {name}</p>
        </div>
    </a>
</div>

<style>
    div.outer {
        height: inherit;
    }

    div.inner {
        box-sizing: border-box;
        padding: 20px 16px 4px;
        width: inherit;
        height: inherit;
    }

    a{
        display: block;
        height: inherit;
        color: inherit;
        text-decoration: none;
    }
    /*TODO - hackish */
    a:hover {
        background-color: aliceblue;
        border-radius: 10px;
    }
    a:hover div.tile-icon {
        background-color: white;
    }
    a:hover img {
        background-color: white;
        border-radius: initial;
    }

    div.tile-icon {
        margin: 0 auto;
        width: 60px;
        height: 60px;
        padding: 15px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

    p {
        display:block;
        margin: 20px 0 0 0;
        text-align: center;
        font-size: 16px;
    }

    img {
        width: inherit;
        height: inherit;
    }
</style>
